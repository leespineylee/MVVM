<UserControl x:Class="WPFShipping.UserControlShipping"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFShipping"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <local:UserControlShipping x:Name="shippingView" />
        <TextBlock HorizontalAlignment="Left" Margin="44,54,0,0" TextWrapping="Wrap" Text="{Binding StartZipCode, StringFormat=' {0:c}', Mode=OneWay}" VerticalAlignment="Top" Height="17" Width="96"/>
    </Grid>
</UserControl>
